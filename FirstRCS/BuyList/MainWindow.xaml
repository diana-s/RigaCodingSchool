<Window x:Class="BuyList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuyList"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="Aqua">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="477*"/>
            <ColumnDefinition Width="40*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name ="BuyListItemName" Background="Black" HorizontalAlignment="Left" FontSize="10" FontFamily="Arial" Height="30" Margin="34,23,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name ="AddListItemButton" Content="Pievienot" Click="AddListItemButton_Click" FontFamily="Arial" HorizontalAlignment="Left" Margin="56,67,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-1.44,-1.35"/>
        <ScrollViewer Margin ="100">
            <ItemsControl x:Name ="BuyItemListControl"/> 
        </ScrollViewer>
       

    </Grid>
</Window>
