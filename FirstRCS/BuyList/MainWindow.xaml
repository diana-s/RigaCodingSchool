<Window x:Class="BuyList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuyList"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="Aqua">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name ="BuyListItemName" Background="ForestGreen" HorizontalAlignment="Left" TextAlignment="Center" FontStyle="Italic" FontSize="10" FontFamily="Arial" Height="30" Margin="211,27,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name ="AddListItemButton" Content="Pievienot" Background="AntiqueWhite" Click="AddListItemButton_Click" FontFamily="Arial" HorizontalAlignment="Left" Margin="364,39,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-1.44,-1.35" Height="18"/>
        <ScrollViewer Margin ="10,100,0,100">
            <ItemsControl x:Name ="BuyItemListControl"/>
        </ScrollViewer>


    </Grid>
</Window>
