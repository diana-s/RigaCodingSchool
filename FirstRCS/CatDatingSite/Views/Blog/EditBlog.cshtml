@model CatDatingSite.Models.Blog


@{
    ViewBag.Title = "EditBlog";
}

<h2>EditBlog</h2>
@using (Html.BeginForm("EditBlog", "Blog", FormMethod.Post))
{
    <!-- Nenorādot ID forma neaizpildās pilnība, taču ir nepieciešama. Tā kā, es negribu, lai lietotajs var mainīt ID,
        izveidoju viņu kā slēpto lauku-->
    @Html.HiddenFor(Model => Model.BlogID)
    @Html.HiddenFor(Model => Model.Blogemail)
    @Html.HiddenFor(Model => Model.BlogCreated)
    @Html.HiddenFor(Model => Model.BlogEdited)
    <div class="row">
        <div class="col-md-2"><b>Virsraksts:</b></div>
        <!-- EditorFor uzģenerē lauciņu-->
        <div class="col-md-2">
            <p>
                @Html.EditorFor(Model => Model.BlogName)
            </p>
        </div>
        <p></p>

    </div>
    <div class="row">
        <div class="col-md-2"><b>Bloga Autors:</b></div>
        <div class="col-md-2"><p>@Html.EditorFor(Model => Model.BlogAuthor)</p></div>
        <p> </p>
    </div>


    <div class="row">
        <div class="col-md-2"><b>Attēls:</b></div>
        <div class="col-md-2"><p>@Html.EditorFor(Model => Model.BlogImage)</p></div>
        <p></p>

    </div>

    <div class="row">
        <div class="col-lg-2"><b>Teksts:</b></div>
        <div class="col-lg-2"><p>@Html.EditorFor(Model => Model.BlogDescription)</p></div>
        <p>@Html.ValidationMessageFor(Model => Model.BlogDescription)</p>

    </div>


    <input type="submit" value="Rediģēt Blogu" />

}

