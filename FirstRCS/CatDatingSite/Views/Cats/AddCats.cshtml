
@model  CatDatingSite.Models.CatProfile

@{
    ViewBag.Title = "AddCats";
}

<h2>AddCats</h2>

@using (Html.BeginForm("AddCats", "Cats", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-2"><b>Kaķa vārds:</b></div>
        <!-- EditorFor uzģenerē lauciņu-->
        <div class="col-md-2">
            <p>@Html.EditorFor(Model => Model.CatName)
            </p>
        </div>
        <p></p>

    </div>
    <div class="row">
        <div class="col-md-2"><b>Kaķa vecums:</b></div>
        <div class="col-md-2"><p>@Html.EditorFor(Model => Model.CatAge)</p></div>
        <p> </p>
    </div>


    <div class="row">
        <div class="col-md-2"><b>Kaķa attēls:</b></div>
        <div class="col-md-2">
                   <p>
            <input type="file" id="uploadedPicture" name="uploadedPicture" size="23" />
        </p>
        <p>
            <input type="submit" value="Upload file" />
        </p>

        </div>
        <p></p>

    </div>

    <div class="row">
        <div class="col-md-2"><b>Kaķa apraksts:</b></div>
        <div class="col-md-2"><p>@Html.EditorFor(Model => Model.CatDescription)</p></div>
        <p>@Html.ValidationMessageFor(Model =>Model.CatDescription)</p>

    </div>

    <input type="submit" value="Izveidot kaķa profilu" />
}

